---
import Layout from "~/layouts/Layout.astro"
import Section from "@c/Section.astro"
import ExampleHead from "~/components/ExampleHead.astro"

// vanilla
import ControlsSlider from "~/components/vanilla/ControlsSlider.astro"
import Parallax1Slider from "~/components/vanilla/Parallax1Slider.astro"
import KeyboardControls from "~/components/vanilla/KeyboardControls.astro"
import ParallaxSpeedSlider from "~/components/vanilla/ParallaxSpeed.astro"
import LinkSlider from "~/components/vanilla/LinkSlider.astro"
import VariableWidthSlider from "~/components/vanilla/VariableWidthSlider.astro"
import AutoScrollSlider from "~/components/vanilla/AutoScrollSlider.astro"
import VerticalSlider from "~/components/vanilla/VerticalSlider.astro"

import ExamplePageHead from "~/components/ExamplePageHead.astro"
---

<Layout>
  <ExamplePageHead
    title={"Examples."}
    description={"A collection of examples of the slider in action and implementation ideas."}
  />
</Layout>

<Section id={"controls"} class="min-h-[80svh] pt-[10svh]">
  <ExampleHead
    title={"Controls."}
    description={"Previous and next buttons, clickable dots."}
    features={["Infinite", "Snap", "controls", "current"]}
    link={"extend.md#controls"}
  />
  <ControlsSlider />
</Section>

<Section id={"keyboard-controls"} class="min-h-[80svh] pt-[10svh]">
  <ExampleHead
    title={"Keyboard controls."}
    description={"Arrow keys, spacebar, and number keys to navigate. Nothing on mobile."}
    features={["Infinite", "Snap", "controls"]}
    link={"extend.md#keyboard-controls"}
  />
  <KeyboardControls />
</Section>

<Section id={"parallax1"} class="min-h-[80svh] pt-[10svh]">
  <ExampleHead
    title={"Parallax."}
    description={"Weird parallax effect but kinda exemplifies why you might want it."}
    features={["Infinite", "Snap", "Parallax", "current"]}
    link={"extend.md#base-parallax"}
  />
  <Parallax1Slider />
</Section>

<Section id={"parallax-speed"} class="min-h-[80svh] pt-[10svh]">
  <ExampleHead
    title={"Parallax + speed."}
    description={"Parallax and speed used in conjunction to create a bouncy effect."}
    features={["Infinite", "Snap", "Parallax", "Speed"]}
    link={"extend.md#parallax-and-speed"}
  />
  <ParallaxSpeedSlider />
</Section>

<Section id={"link-slider"} class="min-h-[80svh] pt-[10svh]">
  <ExampleHead
    title={"Link slider."}
    description={"A slider that navigates to a link when clicked."}
    features={["Infinite", "Snap", "Link"]}
  />
  <LinkSlider />
</Section>

<Section id={"variable-width"} class="min-h-[80svh] pt-[10svh]">
  <ExampleHead
    title={"Variable width."}
    description={"Slides with different widths that snap to center, perfect for mixed content layouts."}
    features={["Variable width", "Snap", "Finite"]}
    link={"extend.md#variable-width"}
  />
  <VariableWidthSlider />
</Section>

<Section id={"auto-scroll"} class="min-h-[80svh] pt-[10svh]">
  <ExampleHead
    title={"Auto-scrolling slider."}
    description={"Continuously scrolls at a constant speed. Pauses on hover or interaction, resumes automatically."}
    features={["Infinite", "Auto-scroll"]}
    link={"extend.md#auto-scroll"}
  />
  <AutoScrollSlider />
</Section>

<Section id={"vertical"} class="min-h-[80svh] pt-[10svh]">
  <ExampleHead
    title={"Vertical slider."}
    description={"Same functionality as horizontal, but scrolling vertically. Use ArrowUp/ArrowDown keys to navigate."}
    features={["Vertical", "Infinite", "Snap"]}
    link={"extend.md#vertical-slider"}
  />
  <VerticalSlider />
</Section>
